#! /bin/bash
#
# Skript to manage ssh accounts

if [ "$1" == "esd" ] || [ "$1" == "arduino" ] ; then
    ssh $2 -p 6307 mnettesheim@arduino.geowissenschaften.uni-tuebingen.de $3
    #ssh $2 -p 6307 mnettesheim@134.2.5.40 $3
elif [ "$1" == "argand" ] ; then
    ssh $2 -p 6307 mnettesheim@argand.geowissenschaften.uni-tuebingen.de $3
    #ssh $2 -p 6307 mnettesheim@134.2.5.36 $3
elif [ "$1" == "darwin" ] ; then
    ssh -p 6307 $2 mnettesheim@darwin.geowissenschaften.uni-tuebingen.de $3
    #ssh -p 6307 $2 mnettesheim@134.2.5.35 $3
elif [ "$1" == "laplace" ] ; then
    ssh -p 6307 $2 mnettesheim@darwin.geowissenschaften.uni-tuebingen.de $3
elif [ "$1" == "agassiz" ] ; then
    ssh -p 6307 $2 mnettesheim@agassiz.geowissenschaften.uni-tuebingen.de $3
    #ssh -p 6307 $2 mnettesheim@134.2.5.33 $3
elif [ "$1" == "petrarch" ] ; then
    ssh $2 epiie01@glogin.hpc.uni-tuebingen.de $3
    #ssh $2 epiie01@134.2.3.39 $3
else
    echo "Host not defined"
fi

# http://www.linuxproblem.org/art_9.html
