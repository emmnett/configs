#! /bin/bash
#
# Skript to manage ssh accounts

if [ "$1" == "esd" ] || [ "$1" == "arduino" ] ; then
    ssh $2 -p 6307 mnettesheim@arduino.geowissenschaften.uni-tuebingen.de $3
    #ssh $2 $3 -p 6307 mnettesheim@134.2.5.40
elif [ "$1" == "argand" ] ; then
    ssh $2 -p 6307 mnettesheim@argand.geowissenschaften.uni-tuebingen.de $3
    #ssh $2 $3 -p 6307 mnettesheim@134.2.5.36
elif [ "$1" == "suess" ] ; then
    ssh -p 6307 $2 mnettesheim@suess.geowissenschaften.uni-tuebingen.de $3
    #ssh -p 6307 $2 $3 mnettesheim@134.2.5.37
elif [ "$1" == "petrarch" ] ; then
    ssh $2 epiie01@ilogin.hpc.uni-tuebingen.de $3
    #ssh "$1" $3 epiie01@134.2.3.39
else
    echo "Host not defined"
fi

# http://www.linuxproblem.org/art_9.html
